Cell["RSA Modular mechanics", "Section",
 CellChangeTimes->{{3.6744346835081325`*^9, 3.67443470164468*^9}}],

Cell["\<\
Need to be able to select a coprime number for the public key\
\>", "Text",
 CellChangeTimes->{{3.67443474696554*^9, 3.6744347660577197`*^9}}],

Cell[BoxData[
 RowBox[{
  RowBox[{
   RowBox[{"cpr", "[", 
    RowBox[{"x_Integer", ",", "k_Integer", ",", "m_Integer"}], "]"}], "/;", 
   RowBox[{"x", ">", "m", ">", "k", ">", "1"}]}], ":=", 
  RowBox[{"First", "@", 
   RowBox[{"Pick", "[", 
    RowBox[{
     RowBox[{"Range", "[", 
      RowBox[{"k", ",", "m"}], "]"}], ",", 
     RowBox[{"CoprimeQ", "[", 
      RowBox[{"x", ",", 
       RowBox[{"Range", "[", 
        RowBox[{"k", ",", "m"}], "]"}]}], "]"}]}], "]"}]}]}]], "Input",
 CellChangeTimes->{{3.6744352190533*^9, 3.6744352276096044`*^9}}],

Cell[BoxData[{
 RowBox[{
  RowBox[{"r", "=", 
   RowBox[{"Prime", "[", 
    RowBox[{"RandomInteger", "[", 
     RowBox[{"{", 
      RowBox[{"350", ",", "5000"}], "}"}], "]"}], "]"}]}], ";"}], "\n", 
 RowBox[{
  RowBox[{"s", "=", 
   RowBox[{"Prime", "[", 
    RowBox[{"RandomInteger", "[", 
     RowBox[{"{", 
      RowBox[{"350", ",", "5000"}], "}"}], "]"}], "]"}]}], ";"}], "\n", 
 RowBox[{
  RowBox[{"n", "=", 
   RowBox[{"r", "*", "s"}]}], ";"}], "\n", 
 RowBox[{
  RowBox[{"e", "=", 
   RowBox[{"cpr", "[", 
    RowBox[{
     RowBox[{"EulerPhi", "@", "n"}], ",", "2", ",", 
     RowBox[{
      RowBox[{"EulerPhi", "@", "n"}], "-", "1"}]}], "]"}]}], 
  ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"d", "=", 
   RowBox[{"PowerMod", "[", 
    RowBox[{"e", ",", 
     RowBox[{"-", "1"}], ",", 
     RowBox[{"EulerPhi", "@", "n"}]}], "]"}]}], ";"}]}], "Input",
 CellChangeTimes->{{3.674435050138542*^9, 3.6744350930030055`*^9}}],

Cell[BoxData[{
 RowBox[{
  RowBox[{"encryptMessage", "[", "message_", "]"}], ":=", 
  RowBox[{"Mod", "[", 
   RowBox[{
    SuperscriptBox["message", "e"], ",", "n"}], 
   "]"}]}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"decryptMessage", "[", "message_", "]"}], ":=", 
  RowBox[{"Mod", "[", 
   RowBox[{
    SuperscriptBox["message", "d"], ",", "n"}], "]"}]}]}], "Code",
 CellChangeTimes->{{3.6744347893252497`*^9, 3.6744349824721613`*^9}, {
